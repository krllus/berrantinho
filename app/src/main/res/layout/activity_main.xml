<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/md_separator"
    android:paddingTop="@dimen/md_separator">

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="@dimen/md_keylines"
        android:paddingStart="@dimen/md_keylines">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/edit_number"
            android:text="@string/label"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edit_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:visibility="gone" />

        <Button
            android:id="@+id/show_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/show_number"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_start_notification_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_suplementacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_start_suplementacao_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_start_toolbar_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_bolinha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_start_bolinha_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="@string/btn_start_dialog_label"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_data_binding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Data Binding"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Ingredients"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_flower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="FlowerActivity"
            android:visibility="visible" />

        <Button
            android:id="@+id/launch_dialog_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Dialgo2"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_dialog_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="TextExample"
            android:visibility="gone" />

        <Button
            android:id="@+id/launch_seekbar_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="SeekBar"
            android:visibility="gone" />


        <Button
            android:id="@+id/launch_pie_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Pie Chart" />

        <Button
            android:id="@+id/launch_create_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="CreateFile" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

